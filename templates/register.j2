<!DOCTYPE html>
<html>
<head>
  {% include "common_header.j2" %}
  <title>Register</title>
  <script src="{{ url_for('static', path='/register.js') }}"></script> 
</head>
<body class="dark:bg-black dark:text-white h-screen flex items-center">
    <form id="form"
	  class="max-w-md mx-auto dark:bg-gray-900 bg-white rounded p-6
                 ring-2 ring-blue-500/50 md:min-h-sm md:min-w-sm">
      <div class="pb-8"><h1 class="text-center text-2xl font-bold">Create a New Account</h1></div>
        <div class="flex items-center">
	  <label for="username"
                 class="w-32 dark:text-gray-200 text-gray-700 font-semibold">
            Email
	  </label>
	</div>
	<div>
	  <input type="email"
	         id="email"
		 name="email"
		 class="flex-auto border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400 w-full"
		 required />
	</div>
        <div class="mt-2 flex items-center">
	  <label for="username"
                 class="w-32 dark:text-gray-200 text-gray-700 font-semibold">
            Nickname
	  </label>
	</div>
	<div>
	  <input type="text"
	         id="nickname"
		 name="nickname"
		 class="flex-auto border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400 w-full"
		 required />
        </div>
        <div class="mt-2 flex items-center">
	  <label for="password"
		 class="w-32 dark:text-gray-200 text-gray-700 font-semibold">
	    Password
	  </label>
	</div>
	<div>
	  <input type="password"
	         id="password"
		 name="password"
		 class="flex-auto border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400 w-full"
		 required />
        </div>
        <div class="flex justify-end">
	  <input type="submit"
		 value="Submit"	
		 class="mt-4 bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
	  </input>
        </div>
    </form>
    <div id="registerstatus">
      <!-- For displaying the status of registration. -->
    </div>
</body>
</html>
