<div class="grid grid-flow-col w-full md:p-6 p-2">
  <div class="font-bold justify-self-start w-fit"> 
    <a href="{{ url_for('root') }}">conjecscore</a>
  </div>
  <div class="font-bold justify-self-end">
    {% if user == None %}
      <a class="bg-blue-500 text-white px-4 p-2 rounded duration-300 ease-in-out hover:bg-green-500"
	 href="{{ url_for('login') }}">Login</a>
      <a class="bg-purple-500 text-white px-4 p-2 rounded duration-300 ease-in-out hover:bg-red-500"
         href="{{ url_for('register') }}">Sign up</a>
    {% else %}
      <a href="{{ url_for('me') }}">
        {{ user.nickname }}
      </a>
      <a href="{{ url_for('logout') }}" class="ml-3 bg-purple-500 text-white px-4 p-2 rounded duration-300 ease-in-out hover:bg-red-500">
        Logout
      </a>
    {% endif %}
  </div>
</div>
